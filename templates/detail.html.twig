{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
<img src="assets/img/logo-v2.png"/>
{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
    {# Dit is commentaar #}

    {# Print #}
    <h1>Heading #1</h1>
    <h2>Heading #2</h2>
    <h3>Heading #3 t/m 5</h3>

    <h4>Dit is de template {{  title }}</h4>

{# Loop #}
    <ul>
    {% for recipe in data %}
        <li>
            <img src="{{ recipe.recipe.afbeelding }}" style="width: 100px; height: 100px;">

            <h5>{{ recipe.recipe.titel }}</h5> {#hier stond geen heading bij origineel!#}
            {# sub-loop #}
            <ul>
                {% for ingr in recipe.ingredients %}
                     <li>
                        <span {% if ingr.ingredientWithArticle.id|number_format < 2 %}style='color: #F00'{% endif %}><h1>{{  ingr.ingredientWithArticle.naam }}</h1></span>
                        {# if #}
                        {%  if ingr.ingredientWithArticle.id|number_format == 3 %}
                            <strong>Dit is ID 3!</strong>
                        {%  endif  %}
                    </li>
                        
                    
                {% endfor %}
            </ul>
        </li>
    {% endfor %}
    <ul>
     {# Dump #}
       <pre>
        {{ dump(data) }}
       </pre>

{% endblock %}
